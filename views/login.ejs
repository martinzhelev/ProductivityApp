<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Amblezio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/login.css">
</head>
<body class="bg-dark text-light">
    <!-- Animated Background -->
    <div class="animated-bg"></div>
    
    <!-- Main Content -->
    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100 justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <!-- Login Card -->
                <div class="login-card glass">
                    <!-- Header -->
                    <div class="login-header text-center mb-4">
                        <div class="login-icon mb-3">
                            <i class="fas fa-rocket"></i>
                        </div>
                        <h1 class="login-title mb-2">
                            <span class="gradient-text">Welcome to Amblezio</span>
                        </h1>
                        <p class="login-subtitle">Sign in to continue your journey</p>
                    </div>

                    <!-- Login Form -->
                    <form action="/login" method="POST" class="login-form">
                        <div class="form-group-modern mb-3">
                            <label for="login_username" class="form-label-modern">
                                <i class="fas fa-user me-2"></i>Username
                            </label>
                            <input type="text" id="login_username" name="username" class="form-control-modern" required>
                        </div>

                        <div class="form-group-modern mb-4">
                            <label for="login_password" class="form-label-modern">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input type="password" id="login_password" name="password" class="form-control-modern" required>
                        </div>

                        <button id="loginButton" type="submit" class="btn btn-primary w-100 pulse-btn mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </button>
                    </form>

                    <!-- Register Link -->
                    <div class="register-link text-center">
                        <p class="mb-0">
                            Don't have an account? 
                            <a href="/register" class="register-link-text">
                                <i class="fas fa-user-plus me-1"></i>Create one
                            </a>
                        </p>
                    </div>

                    <!-- Back to Home -->
                    <div class="back-home text-center mt-3">
                        <a href="/" class="back-link">
                            <i class="fas fa-arrow-left me-2"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/frontendJS/loginFE.js"></script>
</body>
</html>