<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Workout Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header class="bg-dark text-white p-3">
    <div class="container d-flex justify-content-between align-items-center">
      <div class="profile d-flex align-items-center">
        <!-- <img src="profile.jpg" alt="Profile Picture"> -->
        <span class="ms-2"><%= username %></span>
      </div>
      <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
        â˜°
      </button>
    </div>
  </header>

  <!-- Offcanvas Menu -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title">Menu</h5>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="#">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Settings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Logout</a>
        </li>
      </ul>
    </div>
  </div>

  <div class="row g-4">
    <!-- Workouts Calendar -->
    <div class="col-md-6">
        <div class="workouts border p-4 rounded shadow">
            <h2 class="mb-3">Workouts Calendar</h2>
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>Sun</th>
                        <th>Mon</th>
                        <th>Tue</th>
                        <th>Wed</th>
                        <th>Thu</th>
                        <th>Fri</th>
                        <th>Sat</th>
                    </tr>
                </thead>
                <tbody>
                    <% 
                        const currentDate = new Date(); // Current date
                        const year = currentDate.getFullYear();
                        const month = currentDate.getMonth(); // 0-based (0 = January)
                        const firstDay = new Date(year, month, 1).getDay(); // Day the month starts on
                        const daysInMonth = new Date(year, month + 1, 0).getDate(); // Total days in the month
                        let date = 1; // Start counting dates for the month
                    %>

                    <% for (let week = 0; week < 6; week++) { // Render up to 6 weeks (rows) %>
                        <tr>
                            <% for (let day = 0; day < 7; day++) { %>
                                <% if (week === 0 && day < firstDay) { %>
                                    <!-- Empty cells before the start of the month -->
                                    <td></td>
                                <% } else if (date > daysInMonth) { %>
                                    <!-- Empty cells after the end of the month -->
                                    <td></td>
                                <% } else { %>
                                    <!-- Populate calendar with dates -->
                                    <td>
                                      <% 
                                        // Generate date string in 'YYYY-MM-DD' format
                                        const dateString = `${year}-${(month + 1).toString().padStart(2, '0')}-${date.toString().padStart(2, '0')}`;

                                        // Find the workout in completedWorkouts for this date
                                        const workout = completedWorkouts.find(w => w.date === dateString);
                                    
                                        // Check if the workout is marked as completed
                                        const isChecked = workout && workout.is_completed ? 'checked' : '';
                                      %>
                                      <div class="form-check">
                                        <input 
                                          class="form-check-input workout-checkbox" 
                                          type="checkbox" 
                                          id="day-<%= date %>" 
                                          data-workout-id="<%= workout ? workout.workout_id : '' %>" 
                                          data-date="<%= dateString %>" 
                                          <%= isChecked %> />
                                        <label class="form-check-label" for="day-<%= date %>">
                                          <%= date %>
                                        </label>
                                      </div>
                                    </td>
                                    
                                  
                                    <% date++; %>
                                <% } %>
                            <% } %>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

      

      <!-- Workout Tracker -->
<div class="col-md-10 mx-auto">
  <div class="workout-tracker border p-4 rounded shadow">
    <h2 class="mb-3 text-center">Workout Tracker</h2>

    <!-- Table for Exercises and Sets -->
    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th>Exercise 
            <button class="btn btn-sm btn-success ms-2" data-bs-toggle="modal" data-bs-target="#addExerciseModal">+</button>
          </th>
          <th>Set 1</th>
          <th>Set 2</th>
          <th>Set 3</th>
          <th>Set 4</th>
          <th>Set 5</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (exercises && exercises.length > 0) { %>
          <% exercises.forEach((exercise) => { %>
            <tr>
              <td data-id="<%= exercise.exercise_id %>"><%= exercise.name %></td>
              <% for (let i = 1; i <= 5; i++) { %> <!-- Loop over 5 possible sets -->
                <td>
                  <% const set = exercise.sets[`set${i}`]; %> <!-- Access the set dynamically -->
                  <% if (set && set !== 0) { %> <!-- If set is not null or zero -->
                    <%= set %> reps
                  <% } else { %>
                    <span class="text-muted">-</span> <!-- Placeholder when no set data is available -->
                  <% } %>
                </td>
              <% } %>
              <td>
                <button 
                  class="btn btn-sm btn-primary add-set-btn" 
                  data-bs-toggle="modal" 
                  data-bs-target="#addSetModal" 
                  data-exercise-id="<%= exercise.exercise_id %>">
                  Add Set
                </button>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center">No exercises added yet</td>
          </tr>
        <% } %>
      </tbody>
    </table>
    
    
    

    <!-- Category Picker and Finish Button -->
    <div class="d-flex justify-content-between align-items-center mt-4">
      <div class="form-group">
        <label for="categoryPicker" class="form-label">Workout Category</label>
        <select id="categoryPicker" class="form-select">
          <option value="Strength">Strength</option>
          <option value="Agility">Agility</option>
          <option value="Mental Work">Mental Work</option>
          <option value="Social">Social</option>
          <option value="Financial">Financial</option>
          <option value="Speed">Speed</option>
        </select>
      </div>
      <button class="btn btn-primary">Finish Workout</button>
    </div>
  </div>
</div>

<!-- Add Exercise Modal -->
<div class="modal fade" id="addExerciseModal" tabindex="-1" aria-labelledby="addExerciseModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addExerciseModalLabel">Add Exercise</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="addExerciseForm">
          <div class="mb-3">
            <label for="exerciseName" class="form-label">Exercise Name</label>
            <input type="text" id="exerciseName" name="exerciseName" class="form-control" placeholder="E.g., Push-ups">
          </div>
          <button type="submit" id="addExerciseButton" class="btn btn-success w-100">Add Exercise</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Add Set Modal -->
<!-- Add Set Modal -->
<div class="modal fade" id="addSetModal" tabindex="-1" aria-labelledby="addSetModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addSetModalLabel">Add Set</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="addSetForm">
          <!-- Hidden input to store workoutId -->
          <input type="hidden" id="data-exercise-id">

          <div class="mb-3">
            <label for="reps" class="form-label">Reps</label>
            <input type="number" class="form-control" id="reps" required>
          </div>

          <button type="submit" class="btn btn-primary">Add Set</button>
        </form>
      </div>
    </div>
  </div>
</div>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/frontendJS/bodyFE.js"></script>
</body>
</html>
