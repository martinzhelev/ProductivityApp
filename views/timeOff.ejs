<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Time Off - Amblezio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/amblezio.css">
    <link rel="stylesheet" href="/css/timeoff.css">
</head>
<body class="bg-dark text-light">
    <!-- Animated Background -->
    <div class="animated-bg"></div>
    
    <!-- Modern Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top glass-nav">
        <div class="container">
            <a class="navbar-brand fw-bold fs-3" href="/home/<%= userId %>">
                <i class="fas fa-rocket me-2 text-primary"></i>
                <span class="gradient-text">Amblezio</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/profile/<%= userId %>">
                            <i class="fas fa-user me-1"></i>Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/subscribe/<%= userId %>">
                            <i class="fas fa-credit-card me-1"></i>Premium
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Offcanvas Menu -->
    <div class="offcanvas offcanvas-end glass-nav" tabindex="-1" id="offcanvasNavbar">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title gradient-text">Navigation</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/home/<%= userId %>">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/subscribe/<%= userId %>">
                        <i class="fas fa-credit-card me-2"></i>Payments
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/profile/<%= userId %>">
                        <i class="fas fa-user me-2"></i>Profile
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/work/<%= userId %>">
                        <i class="fas fa-briefcase me-2"></i>Work
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/mental/<%= userId %>">
                        <i class="fas fa-brain me-2"></i>Mental
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/calorietracker/<%= userId %>">
                        <i class="fas fa-utensils me-2"></i>Calorie Tracker
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/social/<%= userId %>">
                        <i class="fas fa-users me-2"></i>Social
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link active" href="/timeoff/<%= userId %>">
                        <i class="fas fa-clock me-2"></i>Time Off
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/body/<%= userId %>">
                        <i class="fas fa-dumbbell me-2"></i>Body
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link modern-nav-link logout-link" href="/logout">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container-fluid px-4 py-5" style="margin-top: 80px;">
        <!-- Page Header -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="page-header-card glass text-center py-4">
                    <div class="page-icon mb-3">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h1 class="page-title mb-3">
                        <span class="gradient-text">Time Off Scheduler</span>
                    </h1>
                    <p class="page-subtitle">Plan and manage your time off efficiently</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="modern-card glass">
                    <!-- Modern Tabs -->
                    <div class="modern-tabs">
                        <ul class="nav nav-tabs-modern" id="timeOffTab" role="tablist">
                            <li class="nav-item-modern" role="presentation">
                                <button class="nav-link-modern active" id="daily-tab" data-bs-toggle="tab" data-bs-target="#daily" type="button" role="tab" aria-controls="daily" aria-selected="true">
                                    <i class="fas fa-calendar-day me-2"></i>Daily
                                </button>
                            </li>
                            <li class="nav-item-modern" role="presentation">
                                <button class="nav-link-modern" id="weekly-tab" data-bs-toggle="tab" data-bs-target="#weekly" type="button" role="tab" aria-controls="weekly" aria-selected="false">
                                    <i class="fas fa-calendar-week me-2"></i>Weekly
                                </button>
                            </li>
                            <li class="nav-item-modern" role="presentation">
                                <button class="nav-link-modern" id="monthly-tab" data-bs-toggle="tab" data-bs-target="#monthly" type="button" role="tab" aria-controls="monthly" aria-selected="false">
                                    <i class="fas fa-calendar-alt me-2"></i>Monthly
                                </button>
                            </li>
                            <li class="nav-item-modern" role="presentation">
                                <button class="nav-link-modern" id="yearly-tab" data-bs-toggle="tab" data-bs-target="#yearly" type="button" role="tab" aria-controls="yearly" aria-selected="false">
                                    <i class="fas fa-calendar me-2"></i>Yearly
                                </button>
                            </li>
                        </ul>
                    </div>

                    <div class="tab-content-modern" id="timeOffTabContent">
                        <!-- Daily Time Off -->
                        <div class="tab-pane-modern fade show active" id="daily" role="tabpanel" aria-labelledby="daily-tab">
                            <div class="tab-content-body">
                                <!-- Add Daily Form -->
                                <div class="add-form-modern mb-4">
                                    <h5 class="form-title-modern">
                                        <i class="fas fa-plus-circle me-2"></i>Add Daily Time Off
                                    </h5>
                                    <form class="timeoff-form-modern">
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-6">
                                                <div class="form-group-modern">
                                                    <label for="dailyDate" class="form-label-modern">
                                                        <i class="fas fa-calendar me-2"></i>Date
                                                    </label>
                                                    <input type="date" id="dailyDate" class="form-control-modern" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group-modern">
                                                    <label for="dailyTime" class="form-label-modern">
                                                        <i class="fas fa-clock me-2"></i>Time
                                                    </label>
                                                    <input type="time" id="dailyTime" class="form-control-modern" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group-modern mb-3">
                                            <label for="dailyDescription" class="form-label-modern">
                                                <i class="fas fa-comment me-2"></i>Description (optional)
                                            </label>
                                            <input type="text" id="dailyDescription" class="form-control-modern" 
                                                placeholder="e.g., Doctor's appointment">
                                        </div>
                                        <button id="saveDailyBtn" class="btn btn-primary w-100 pulse-btn">
                                            <i class="fas fa-save me-2"></i>Save Daily
                                        </button>
                                    </form>
                                </div>

                                <!-- Daily List -->
                                <div class="schedule-section-modern">
                                    <h5 class="schedule-title-modern">
                                        <i class="fas fa-list me-2"></i>Daily Schedule
                                    </h5>
                                    <div id="dailyList" class="schedule-list-modern">
                                        <% if (timeOffData.day && timeOffData.day.length > 0) { %>
                                            <% timeOffData.day.forEach(timeOff => { %>
                                                <div class="schedule-item-modern">
                                                    <div class="schedule-main">
                                                        <div class="schedule-info">
                                                            <div class="schedule-date">
                                                                <i class="fas fa-calendar-day me-2"></i>
                                                                <%= new Date(timeOff.start_date).toLocaleDateString('en-GB') %>
                                                            </div>
                                                            <% if (timeOff.start_time) { %>
                                                                <div class="schedule-time">
                                                                    <i class="fas fa-clock me-2"></i>
                                                                    <%= timeOff.start_time %>
                                                                </div>
                                                            <% } %>
                                                            <% if (timeOff.description) { %>
                                                                <div class="schedule-description">
                                                                    <i class="fas fa-comment me-2"></i>
                                                                    <%= timeOff.description %>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                        <div class="schedule-actions">
                                                            <button class="btn btn-outline-danger btn-sm delete-timeoff" data-id="<%= timeOff.id %>">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        <% } else { %>
                                            <div class="empty-state">
                                                <i class="fas fa-calendar-day"></i>
                                                <h4>No daily time off scheduled</h4>
                                                <p>Start planning your daily breaks and appointments!</p>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Weekly Time Off -->
                        <div class="tab-pane-modern fade" id="weekly" role="tabpanel" aria-labelledby="weekly-tab">
                            <div class="tab-content-body">
                                <!-- Add Weekly Form -->
                                <div class="add-form-modern mb-4">
                                    <h5 class="form-title-modern">
                                        <i class="fas fa-plus-circle me-2"></i>Add Weekly Time Off
                                    </h5>
                                    <form class="timeoff-form-modern">
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-6">
                                                <div class="form-group-modern">
                                                    <label for="weeklyDate" class="form-label-modern">
                                                        <i class="fas fa-calendar me-2"></i>Date
                                                    </label>
                                                    <input type="date" id="weeklyDate" class="form-control-modern" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group-modern">
                                                    <label for="weeklyTime" class="form-label-modern">
                                                        <i class="fas fa-clock me-2"></i>Time (optional)
                                                    </label>
                                                    <input type="time" id="weeklyTime" class="form-control-modern">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group-modern mb-3">
                                            <label for="weeklyDescription" class="form-label-modern">
                                                <i class="fas fa-comment me-2"></i>Description (optional)
                                            </label>
                                            <input type="text" id="weeklyDescription" class="form-control-modern" 
                                                placeholder="e.g., Team meeting">
                                        </div>
                                        <button id="saveWeeklyBtn" class="btn btn-primary w-100 pulse-btn">
                                            <i class="fas fa-save me-2"></i>Save Weekly
                                        </button>
                                    </form>
                                </div>

                                <!-- Weekly List -->
                                <div class="schedule-section-modern">
                                    <h5 class="schedule-title-modern">
                                        <i class="fas fa-list me-2"></i>Weekly Schedule
                                    </h5>
                                    <div id="weeklyList" class="schedule-list-modern">
                                        <% if (timeOffData.week && timeOffData.week.length > 0) { %>
                                            <% timeOffData.week.forEach(timeOff => { %>
                                                <div class="schedule-item-modern">
                                                    <div class="schedule-main">
                                                        <div class="schedule-info">
                                                            <div class="schedule-date">
                                                                <i class="fas fa-calendar-week me-2"></i>
                                                                <%= new Date(timeOff.start_date).toLocaleDateString('en-GB') %>
                                                            </div>
                                                            <% if (timeOff.start_time) { %>
                                                                <div class="schedule-time">
                                                                    <i class="fas fa-clock me-2"></i>
                                                                    <%= timeOff.start_time %>
                                                                </div>
                                                            <% } %>
                                                            <% if (timeOff.description) { %>
                                                                <div class="schedule-description">
                                                                    <i class="fas fa-comment me-2"></i>
                                                                    <%= timeOff.description %>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                        <div class="schedule-actions">
                                                            <button class="btn btn-outline-danger btn-sm delete-timeoff" data-id="<%= timeOff.id %>">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        <% } else { %>
                                            <div class="empty-state">
                                                <i class="fas fa-calendar-week"></i>
                                                <h4>No weekly time off scheduled</h4>
                                                <p>Plan your weekly breaks and recurring events!</p>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Monthly Time Off -->
                        <div class="tab-pane-modern fade" id="monthly" role="tabpanel" aria-labelledby="monthly-tab">
                            <div class="tab-content-body">
                                <!-- Add Monthly Form -->
                                <div class="add-form-modern mb-4">
                                    <h5 class="form-title-modern">
                                        <i class="fas fa-plus-circle me-2"></i>Add Monthly Time Off
                                    </h5>
                                    <form class="timeoff-form-modern">
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-6">
                                                <div class="form-group-modern">
                                                    <label for="monthlyStart" class="form-label-modern">
                                                        <i class="fas fa-calendar me-2"></i>Start Date
                                                    </label>
                                                    <input type="date" id="monthlyStart" class="form-control-modern" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group-modern">
                                                    <label for="monthlyEnd" class="form-label-modern">
                                                        <i class="fas fa-calendar me-2"></i>End Date
                                                    </label>
                                                    <input type="date" id="monthlyEnd" class="form-control-modern" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group-modern mb-3">
                                            <label for="monthlyDescription" class="form-label-modern">
                                                <i class="fas fa-comment me-2"></i>Description (optional)
                                            </label>
                                            <input type="text" id="monthlyDescription" class="form-control-modern" 
                                                placeholder="e.g., Extended leave">
                                        </div>
                                        <button id="saveMonthlyBtn" class="btn btn-primary w-100 pulse-btn">
                                            <i class="fas fa-save me-2"></i>Save Monthly
                                        </button>
                                    </form>
                                </div>

                                <!-- Monthly List -->
                                <div class="schedule-section-modern">
                                    <h5 class="schedule-title-modern">
                                        <i class="fas fa-list me-2"></i>Monthly Schedule
                                    </h5>
                                    <div id="monthlyList" class="schedule-list-modern">
                                        <% if (timeOffData.month && timeOffData.month.length > 0) { %>
                                            <% timeOffData.month.forEach(timeOff => { %>
                                                <div class="schedule-item-modern">
                                                    <div class="schedule-main">
                                                        <div class="schedule-info">
                                                            <div class="schedule-date-range">
                                                                <i class="fas fa-calendar-alt me-2"></i>
                                                                <%= new Date(timeOff.start_date).toLocaleDateString('en-GB') %> - <%= new Date(timeOff.end_date).toLocaleDateString('en-GB') %>
                                                            </div>
                                                            <% if (timeOff.description) { %>
                                                                <div class="schedule-description">
                                                                    <i class="fas fa-comment me-2"></i>
                                                                    <%= timeOff.description %>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                        <div class="schedule-actions">
                                                            <button class="btn btn-outline-danger btn-sm delete-timeoff" data-id="<%= timeOff.id %>">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        <% } else { %>
                                            <div class="empty-state">
                                                <i class="fas fa-calendar-alt"></i>
                                                <h4>No monthly time off scheduled</h4>
                                                <p>Plan your monthly breaks and extended leave!</p>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Yearly Time Off -->
                        <div class="tab-pane-modern fade" id="yearly" role="tabpanel" aria-labelledby="yearly-tab">
                            <div class="tab-content-body">
                                <!-- Add Yearly Form -->
                                <div class="add-form-modern mb-4">
                                    <h5 class="form-title-modern">
                                        <i class="fas fa-plus-circle me-2"></i>Add Yearly Time Off
                                    </h5>
                                    <form class="timeoff-form-modern">
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-6">
                                                <div class="form-group-modern">
                                                    <label for="yearlyStart" class="form-label-modern">
                                                        <i class="fas fa-calendar me-2"></i>Start Date
                                                    </label>
                                                    <input type="date" id="yearlyStart" class="form-control-modern" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group-modern">
                                                    <label for="yearlyEnd" class="form-label-modern">
                                                        <i class="fas fa-calendar me-2"></i>End Date
                                                    </label>
                                                    <input type="date" id="yearlyEnd" class="form-control-modern" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group-modern mb-3">
                                            <label for="yearlyDescription" class="form-label-modern">
                                                <i class="fas fa-comment me-2"></i>Description (optional)
                                            </label>
                                            <input type="text" id="yearlyDescription" class="form-control-modern" 
                                                placeholder="e.g., Sabbatical">
                                        </div>
                                        <button id="saveYearlyBtn" class="btn btn-primary w-100 pulse-btn">
                                            <i class="fas fa-save me-2"></i>Save Yearly
                                        </button>
                                    </form>
                                </div>

                                <!-- Yearly List -->
                                <div class="schedule-section-modern">
                                    <h5 class="schedule-title-modern">
                                        <i class="fas fa-list me-2"></i>Yearly Schedule
                                    </h5>
                                    <div id="yearlyList" class="schedule-list-modern">
                                        <% if (timeOffData.year && timeOffData.year.length > 0) { %>
                                            <% timeOffData.year.forEach(timeOff => { %>
                                                <div class="schedule-item-modern">
                                                    <div class="schedule-main">
                                                        <div class="schedule-info">
                                                            <div class="schedule-date-range">
                                                                <i class="fas fa-calendar me-2"></i>
                                                                <%= new Date(timeOff.start_date).toLocaleDateString('en-GB') %> - <%= new Date(timeOff.end_date).toLocaleDateString('en-GB') %>
                                                            </div>
                                                            <% if (timeOff.description) { %>
                                                                <div class="schedule-description">
                                                                    <i class="fas fa-comment me-2"></i>
                                                                    <%= timeOff.description %>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                        <div class="schedule-actions">
                                                            <button class="btn btn-outline-danger btn-sm delete-timeoff" data-id="<%= timeOff.id %>">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        <% } else { %>
                                            <div class="empty-state">
                                                <i class="fas fa-calendar"></i>
                                                <h4>No yearly time off scheduled</h4>
                                                <p>Plan your yearly breaks and sabbaticals!</p>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        window.userId = '<%= userId %>';
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/frontendJS/timeOffFE.js"></script>
</body>
</html>