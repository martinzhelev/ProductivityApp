<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard with Bootstrap</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .profile img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

        .checkbox {
            margin-right: 10px;
        }

        .column {
            padding: 15px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

<header class="bg-dark text-white p-3">
    <div class="container d-flex justify-content-between align-items-center">
        <div class="profile d-flex align-items-center">
            <img src="profile.jpg" alt="Profile Picture">
            <span class="ms-2">Username</span>
        </div>
        <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
            â˜°
        </button>
    </div>
</header>

<!-- Offcanvas Menu -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Settings</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Logout</a>
            </li>
        </ul>
    </div>
</div>

<main class="container mt-4">
    <div class="row">
        <!-- Left Column: Tasks -->
        <div class="col-md-4">
            <div class="column">
                <h2>Tasks</h2>
                <ul class="tasks list-unstyled">
                    <li><input type="checkbox" class="checkbox"> Task 1</li>
                    <li><input type="checkbox" class="checkbox"> Task 2</li>
                    <li><input type="checkbox" class="checkbox"> Task 3</li>
                </ul>
                <button class="btn btn-primary mt-2" id="addTask">Add Task</button>
                <button class="btn btn-danger mt-2" id="removeTask">Remove Task</button>
            </div>
        </div>

        <!-- Middle Column: Habits -->
        <div class="col-md-4">
            <div class="column">
                <h2>Habits</h2>
                <ul class="habits list-unstyled">
                    <li><input type="checkbox" class="checkbox"> Habit 1</li>
                    <li><input type="checkbox" class="checkbox"> Habit 2</li>
                    <li><input type="checkbox" class="checkbox"> Habit 3</li>
                </ul>
                <button class="btn btn-primary mt-2" id="addHabit">Add Habit</button>
                <button class="btn btn-danger mt-2" id="removeHabit">Remove Habit</button>
            </div>
        </div>

        <!-- Right Column: Stats -->
        <div class="col-md-4">
            <div class="column">
                <h2>Player Stats</h2>
                <div class="stats">
                    <p>Strength: 10</p>
                    <p>Agility: 8</p>
                    <p>Intelligence: 12</p>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Example: Adding and removing tasks
    document.getElementById('addTask').onclick = function() {
        let taskList = document.querySelector('.tasks');
        let newTask = document.createElement('li');
        newTask.innerHTML = '<input type="checkbox" class="checkbox"> New Task';
        taskList.appendChild(newTask);
    }

    document.getElementById('removeTask').onclick = function() {
        let taskList = document.querySelector('.tasks');
        if (taskList.lastChild) {
            taskList.removeChild(taskList.lastChild);
        }
    }

    // Example: Adding and removing habits
    document.getElementById('addHabit').onclick = function() {
        let habitList = document.querySelector('.habits');
        let newHabit = document.createElement('li');
        newHabit.innerHTML = '<input type="checkbox" class="checkbox"> New Habit';
        habitList.appendChild(newHabit);
    }

    document.getElementById('removeHabit').onclick = function() {
        let habitList = document.querySelector('.habits');
        if (habitList.lastChild) {
            habitList.removeChild(habitList.lastChild);
        }
    }
</script>

</body>
</html>
