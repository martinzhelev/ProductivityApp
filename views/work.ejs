<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Work Deadlines</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/amblezio.css">
</head>
<body>
    <!-- Header -->
    <header class="bg-dark text-white p-3 rounded-xl glow">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="profile d-flex align-items-center">
                <span class="avatar me-2">M</span>
                <span class="ms-2">
                    <%= username %>
                </span>
            </div>
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasNavbar">
                â˜°
            </button>
        </div>
    </header>

    <!-- Offcanvas Menu -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Menu</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/home/<%= userId %>">ğŸ  Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/subscribe/<%= userId %>">ğŸ’³ Payments</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile/<%= userId %>">ğŸ‘¤ Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/work/<%= userId %>">ğŸ’¼ Work</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/mental/<%= userId %>">ğŸ§  Mental</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/calorietracker/<%= userId %>">ğŸ½ï¸ Calorie Tracker</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/social/<%= userId %>">ğŸ‘¥ Social</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/timeoff/<%= userId %>">â° Time Off</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/body/<%= userId %>">ğŸ’ª Body</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/auth/logout">ğŸšª Logout</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container mt-4">
        <h2 class="text-center mb-4">ğŸ“Œ Work Deadlines & Tasks</h2>

        <div class="row">
            <!-- Left Column: Deadlines -->
            <div class="col-md-6">
                <div class="card shadow-sm p-4 mb-4">
                    <h4 class="text-primary mb-3">ğŸ“… Add a Deadline</h4>

                    <!-- Add Deadline Form -->
                    <div class="mb-3">
                        <label for="deadlineName" class="form-label">Deadline Name</label>
                        <input type="text" id="deadlineName" class="form-control" placeholder="Enter deadline">
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="deadlineDate" class="form-label">Date</label>
                            <input type="date" id="deadlineDate" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label for="deadlineTime" class="form-label">Time</label>
                            <input type="time" id="deadlineTime" class="form-control">
                        </div>
                    </div>

                    <button id="saveDeadlineBtn" class="btn btn-primary mt-3 w-100">â• Save Deadline</button>
                </div>

                <!-- Deadline List -->
                <div class="card shadow-sm p-4 mb-4">
                    <h4 class="text-success mb-3">ğŸ“ Deadlines</h4>
                    <div id="deadlineList" class="list-group">
                        <% if (deadlines.length > 0) { %>
                            <% deadlines.forEach(deadline => { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong class="text-primary"><%= deadline.deadline %></strong> <br>
                                        ğŸ“… <%= new Date(deadline.date).toLocaleDateString('en-GB') %> | â° <%= new Date(deadline.date).toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' }) %>
                                    </div>
                                    <button class="btn btn-danger btn-sm delete-deadline" data-id="<%= deadline.deadline_id %>">Delete</button>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted">No deadlines yet.</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Right Column: Tasks -->
            <div class="col-md-6">
                <div class="card shadow-sm p-4">
                    <h4 class="text-warning mb-3">ğŸ“‹ Tasks</h4>
                    <ul class="list-group" id="tasks-list">
                        <% if (tasks.length > 0) { %>
                            <% tasks.forEach(task => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center" data-task-id="<%= task.task_id %>">
                                    <span>
                                        <input type="checkbox" class="me-2 checkbox" <%= task.completed ? 'checked' : '' %>>
                                        <%= task.task %>
                                    </span>
                                    <button class="btn btn-danger btn-sm delete-task" data-id="<%= task.task_id %>">Delete</button>
                                </li>
                            <% }); %>
                        <% } else { %>
                            <li class="list-group-item text-muted">No tasks found</li>
                        <% } %>
                    </ul>
                    
                    <button class="btn btn-primary mt-3 w-100" id="addTask">â• Add Task</button>
                    <button class="btn btn-danger mt-2 w-100" id="removeDoneTask">ğŸ—‘ Remove Done Tasks</button>
                </div>
            </div>
        </div>

        <!-- Add Task Modal -->
        <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="taskModalLabel">ğŸ“ Add New Task</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="taskName" class="form-label">Task Name</label>
                        <input type="text" id="taskName" class="form-control" placeholder="Enter task">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" id="saveTaskBtn" class="btn btn-primary">âœ” Add Task</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/frontendJS/workFE.js"></script>

</body>
</html>
