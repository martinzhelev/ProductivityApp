<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calorie Tracker</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body { background-color: #f8f9fa; font-family: 'Arial', sans-serif; }
        .tracker-card { border: none; border-radius: 15px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); background-color: #fff; padding: 20px; }
        .form-label { font-weight: 600; color: #343a40; }
        .log-list { max-height: 400px; overflow-y: auto; border: 1px solid #e9ecef; border-radius: 8px; padding: 10px; }
        .log-day { margin-bottom: 15px; }
        .btn-primary { background-color: #007bff; border: none; border-radius: 8px; padding: 10px; }
        .pagination { justify-content: center; margin-top: 20px; }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4 text-primary">üçΩÔ∏è Calorie Tracker</h2>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="tracker-card">
                    <h5 class="text-primary mb-3">Log What You're Eating</h5>
                    <form id="calorieForm">
                        <div class="mb-3">
                            <label for="foodText" class="form-label">What are you eating?</label>
                            <textarea id="foodText" class="form-control" rows="3" placeholder="e.g., pasta carbonara or 100g chicken" required></textarea>
                        </div>
                        <div id="ingredientsInput" class="collapse mb-3">
                            <label for="ingredients" class="form-label">Ingredients (one per line)</label>
                            <textarea id="ingredients" class="form-control" rows="3" placeholder="e.g., 200g spaghetti\n50g pancetta"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Log Calories</button>
                    </form>

                    <h5 class="text-success mt-4 mb-3">Your Logs</h5>
                    <div class="log-list">
                        <% logs.forEach(log => { %>
                            <div class="log-day">
                                <strong><%= log.day %></strong><br>
                                <div><%- log.entries %></div>
                            </div>
                        <% }) %>
                        <% if (logs.length === 0) { %>
                            <p class="text-muted">No entries yet.</p>
                        <% } %>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <% if (page > 1) { %>
                                <li class="page-item"><a class="page-link" href="/calorieTracker/<%= userId %>?page=<%= page - 1 %>">Previous</a></li>
                            <% } %>
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === page ? 'active' : '' %>">
                                    <a class="page-link" href="/calorieTracker/<%= userId %>?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            <% if (page < totalPages) { %>
                                <li class="page-item"><a class="page-link" href="/calorieTracker/<%= userId %>?page=<%= page + 1 %>">Next</a></li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <footer class="text-center mt-3">
            <small>Powered by <a href="https://developer.edamam.com/" target="_blank">Edamam</a></small>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("calorieForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const foodText = document.getElementById("foodText").value;
            const ingredientsText = document.getElementById("ingredients").value;
            const ingredients = ingredientsText.split("\n").filter(i => i.trim());

            try {
                const response = await fetch("/calorieTracker/log", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    credentials: "include",
                    body: JSON.stringify({ foodText, ingredients })
                });
                const data = await response.json();

                if (data.success) {
                    document.getElementById("foodText").value = "";
                    document.getElementById("ingredients").value = "";
                    bootstrap.Collapse.getOrCreateInstance(document.getElementById("ingredientsInput")).hide();
                    window.location.reload();
                } else if (data.needsIngredients) {
                    bootstrap.Collapse.getOrCreateInstance(document.getElementById("ingredientsInput")).show();
                    alert(data.error);
                } else {
                    alert(data.error);
                }
            } catch (error) {
                console.error("Error:", error);
                alert("Failed to log calories");
            }
        });
    </script>
</body>
</html>