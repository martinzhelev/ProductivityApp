<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Amblezio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/amblezio.css">
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body class="bg-dark text-light">
    <!-- Animated Background -->
    <div class="animated-bg"></div>
    
    <!-- Modern Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top glass-nav">
        <div class="container">
            <a class="navbar-brand fw-bold fs-3" href="/home/<%= userId %>">
                <i class="fas fa-rocket me-2 text-primary"></i>
                <span class="gradient-text">Amblezio</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/profile/<%= userId %>">
                            <i class="fas fa-user me-1"></i>Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/subscribe/<%= userId %>">
                            <i class="fas fa-credit-card me-1"></i>Premium
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Offcanvas Menu -->
    <div class="offcanvas offcanvas-end glass-nav" tabindex="-1" id="offcanvasNavbar">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title gradient-text">Navigation</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/home/<%= userId %>">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/subscribe/<%= userId %>">
                        <i class="fas fa-credit-card me-2"></i>Payments
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link active" href="/profile/<%= userId %>">
                        <i class="fas fa-user me-2"></i>Profile
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/work/<%= userId %>">
                        <i class="fas fa-briefcase me-2"></i>Work
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/mental/<%= userId %>">
                        <i class="fas fa-brain me-2"></i>Mental
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/calorietracker/<%= userId %>">
                        <i class="fas fa-utensils me-2"></i>Calorie Tracker
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/social/<%= userId %>">
                        <i class="fas fa-users me-2"></i>Social
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/timeoff/<%= userId %>">
                        <i class="fas fa-clock me-2"></i>Time Off
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link modern-nav-link" href="/body/<%= userId %>">
                        <i class="fas fa-dumbbell me-2"></i>Body
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link modern-nav-link logout-link" href="/logout">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container-fluid px-4 py-5" style="margin-top: 80px;">
        <!-- Profile Header -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="profile-header-card glass text-center py-4">
                    <div class="profile-avatar mb-3">
                        <div class="avatar-circle">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    <h1 class="profile-title mb-3">
                        <span class="gradient-text"><%= user.username %></span>'s Profile
                    </h1>
                    <p class="profile-subtitle">Track your progress and personal growth journey</p>
                </div>
            </div>
        </div>

        <!-- Core Stats Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="modern-card glass">
                    <div class="card-header-modern">
                        <div class="d-flex align-items-center">
                            <div class="card-icon stats-icon">
                                <i class="fas fa-chart-radar"></i>
                            </div>
                            <h3 class="card-title-modern mb-0">Core Stats Overview</h3>
                        </div>
                    </div>
                    <div class="card-body-modern">
                        <div class="chart-container-modern">
                            <canvas id="coreStatsChart"></canvas>
                        </div>
                        <div class="stats-legend-modern">
                            <div class="legend-item-modern">
                                <div class="legend-color strength"></div>
                                <span>Strength</span>
                            </div>
                            <div class="legend-item-modern">
                                <div class="legend-color speed"></div>
                                <span>Speed</span>
                            </div>
                            <div class="legend-item-modern">
                                <div class="legend-color mental"></div>
                                <span>Mental</span>
                            </div>
                            <div class="legend-item-modern">
                                <div class="legend-color social"></div>
                                <span>Social</span>
                            </div>
                            <div class="legend-item-modern">
                                <div class="legend-color work"></div>
                                <span>Work</span>
                            </div>
                            <div class="legend-item-modern">
                                <div class="legend-color agility"></div>
                                <span>Agility</span>
                            </div>
                            <div class="legend-item-modern">
                                <div class="legend-color financial"></div>
                                <span>Financial</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Progress Tracking Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="modern-card glass">
                    <div class="card-header-modern">
                        <div class="d-flex align-items-center">
                            <div class="card-icon progress-icon">
                                <i class="fas fa-tasks"></i>
                            </div>
                            <h3 class="card-title-modern mb-0">Progress Tracking</h3>
                        </div>
                    </div>
                    <div class="card-body-modern">
                        <div class="row g-4">
                            <!-- Task Completion -->
                            <div class="col-lg-6">
                                <div class="progress-card-modern">
                                    <div class="progress-header-modern">
                                        <div class="progress-icon-modern">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                        <div class="progress-info">
                                            <h5 class="progress-label-modern">Task Completion</h5>
                                            <span class="progress-value-modern"><%= taskCompletion.toFixed(1) %>%</span>
                                        </div>
                                    </div>
                                    <div class="radial-progress-modern">
                                        <svg width="120" height="120">
                                            <circle class="bg-circle" cx="60" cy="60" r="50"></circle>
                                            <circle class="progress-circle" cx="60" cy="60" r="50" 
                                                stroke-dasharray="314" 
                                                stroke-dashoffset="<%= 314 - (314 * taskCompletion / 100) %>">
                                            </circle>
                                        </svg>
                                        <div class="progress-text">
                                            <span class="progress-percentage"><%= taskCompletion.toFixed(1) %>%</span>
                                        </div>
                                    </div>
                                    <div class="progress-details-modern">
                                        <div class="detail-item">
                                            <span class="detail-label">Completed:</span>
                                            <span class="detail-value"><%= completedTasks %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Total:</span>
                                            <span class="detail-value"><%= totalTasks %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Habit Tracking -->
                            <div class="col-lg-6">
                                <div class="progress-card-modern">
                                    <div class="progress-header-modern">
                                        <div class="progress-icon-modern">
                                            <i class="fas fa-repeat"></i>
                                        </div>
                                        <div class="progress-info">
                                            <h5 class="progress-label-modern">Habit Completion</h5>
                                            <span class="progress-value-modern"><%= habitCompletion.toFixed(1) %>%</span>
                                        </div>
                                    </div>
                                    <div class="radial-progress-modern">
                                        <svg width="120" height="120">
                                            <circle class="bg-circle" cx="60" cy="60" r="50"></circle>
                                            <circle class="progress-circle" cx="60" cy="60" r="50" 
                                                stroke-dasharray="314" 
                                                stroke-dashoffset="<%= 314 - (314 * habitCompletion / 100) %>">
                                            </circle>
                                        </svg>
                                        <div class="progress-text">
                                            <span class="progress-percentage"><%= habitCompletion.toFixed(1) %>%</span>
                                        </div>
                                    </div>
                                    <div class="progress-details-modern">
                                        <div class="detail-item">
                                            <span class="detail-label">Completed:</span>
                                            <span class="detail-value"><%= completedHabits %></span>
                                        </div>
                                        <div class="detail-item">
                                            <span class="detail-label">Total:</span>
                                            <span class="detail-value"><%= totalHabits %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Health Dashboard Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="modern-card glass">
                    <div class="card-header-modern">
                        <div class="d-flex align-items-center">
                            <div class="card-icon health-icon">
                                <i class="fas fa-heartbeat"></i>
                            </div>
                            <h3 class="card-title-modern mb-0">Health Dashboard</h3>
                        </div>
                    </div>
                    <div class="card-body-modern">
                        <div class="row g-4">
                            <!-- Monthly Calories -->
                            <div class="col-lg-6">
                                <div class="health-card-modern">
                                    <div class="health-icon-modern">
                                        <i class="fas fa-fire"></i>
                                    </div>
                                    <div class="health-content">
                                        <h4 class="health-value-modern"><%= monthlyCalories.toLocaleString() %> kcal</h4>
                                        <p class="health-label-modern">Monthly Calories</p>
                                        <div class="health-trend-modern <%= calorieTrend >= 0 ? 'positive' : 'negative' %>">
                                            <i class="fas fa-<%= calorieTrend >= 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                                            <%= Math.abs(calorieTrend).toFixed(1) %>% vs last month
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Monthly Workouts -->
                            <div class="col-lg-6">
                                <div class="health-card-modern">
                                    <div class="health-icon-modern">
                                        <i class="fas fa-dumbbell"></i>
                                    </div>
                                    <div class="health-content">
                                        <h4 class="health-value-modern"><%= monthlyWorkouts %></h4>
                                        <p class="health-label-modern">Monthly Workouts</p>
                                        <div class="health-trend-modern <%= workoutTrend >= 0 ? 'positive' : 'negative' %>">
                                            <i class="fas fa-<%= workoutTrend >= 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                                            <%= Math.abs(workoutTrend).toFixed(1) %>% vs last month
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Nutrient Chart -->
                            <div class="col-12">
                                <div class="nutrient-chart-modern">
                                    <h5 class="chart-title-modern">
                                        <i class="fas fa-chart-pie me-2"></i>Today's Nutrients
                                    </h5>
                                    <div class="chart-container-modern">
                                        <canvas id="nutrientChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Personal Growth Section -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="modern-card glass">
                    <div class="card-header-modern">
                        <div class="d-flex align-items-center">
                            <div class="card-icon growth-icon">
                                <i class="fas fa-seedling"></i>
                            </div>
                            <h3 class="card-title-modern mb-0">Personal Growth</h3>
                        </div>
                    </div>
                    <div class="card-body-modern">
                        <div class="row g-4">
                            <!-- Reading Sessions -->
                            <div class="col-lg-6">
                                <div class="growth-card-modern">
                                    <div class="growth-icon-modern">
                                        <i class="fas fa-book"></i>
                                    </div>
                                    <div class="growth-content">
                                        <h4 class="growth-value-modern"><%= monthlySessions %></h4>
                                        <p class="growth-label-modern">Reading Sessions This Month</p>
                                        <div class="growth-trend-modern <%= readingTrend >= 0 ? 'positive' : 'negative' %>">
                                            <i class="fas fa-<%= readingTrend >= 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                                            <%= Math.abs(readingTrend).toFixed(1) %>% vs last month
                                        </div>
                                        <div class="growth-details-modern">
                                            <i class="fas fa-file-alt me-1"></i>
                                            <%= pagesRead %> pages read this month
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Meditation -->
                            <div class="col-lg-6">
                                <div class="growth-card-modern">
                                    <div class="growth-icon-modern">
                                        <i class="fas fa-om"></i>
                                    </div>
                                    <div class="growth-content">
                                        <h4 class="growth-value-modern"><%= monthlyMeditation %></h4>
                                        <p class="growth-label-modern">Meditation Minutes</p>
                                        <div class="growth-trend-modern <%= meditationTrend >= 0 ? 'positive' : 'negative' %>">
                                            <i class="fas fa-<%= meditationTrend >= 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                                            <%= Math.abs(meditationTrend).toFixed(1) %>% vs last month
                                        </div>
                                        <div class="growth-details-modern">
                                            <i class="fas fa-clock me-1"></i>
                                            <%= meditationSessions %> sessions this month
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Floating Refresh Button -->
    <button class="floating-refresh-btn pulse-btn" id="dataRefresh">
        <i class="fas fa-sync-alt"></i>
        <span>Refresh Data</span>
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        window.profileData = {
            coreStats: {
                strength: Number("<%= userStats?.strength || 0 %>"),
                speed: Number("<%= userStats?.speed || 0 %>"),
                mental: Number("<%= userStats?.mental || 0 %>"),
                social: Number("<%= userStats?.social || 0 %>"),
                work: Number("<%= userStats?.work || 0 %>"),
                agility: Number("<%= userStats?.agility || 0 %>"),
                financial: Number("<%= userStats?.financial || 0 %>")
            },
            nutrients: { 
                fat: Number("<%= nutrients.fat || 0 %>"), 
                carbs: Number("<%= nutrients.carbs || 0 %>"), 
                protein: Number("<%= nutrients.protein || 0 %>") 
            },
            weeklyCalories: Number("<%= weeklyCalories || 0 %>"),
            habits: Number("<%= habits || 0 %>"),
            reading: Number("<%= reading || 0 %>"),
            progress: {
                taskCompletion: Number("<%= taskCompletion || 0 %>"),
                completedTasks: Number("<%= completedTasks || 0 %>"),
                totalTasks: Number("<%= totalTasks || 0 %>"),
                habitCompletion: Number("<%= habitCompletion || 0 %>"),
                completedHabits: Number("<%= completedHabits || 0 %>"),
                totalHabits: Number("<%= totalHabits || 0 %>")
            },
            health: {
                monthlyCalories: Number("<%= monthlyCalories || 0 %>"),
                calorieTrend: Number("<%= calorieTrend || 0 %>"),
                monthlyWorkouts: Number("<%= monthlyWorkouts || 0 %>"),
                workoutTrend: Number("<%= workoutTrend || 0 %>")
            },
            growth: {
                monthlySessions: Number("<%= monthlySessions || 0 %>"),
                readingTrend: Number("<%= readingTrend || 0 %>"),
                pagesRead: Number("<%= pagesRead || 0 %>"),
                monthlyMeditation: Number("<%= monthlyMeditation || 0 %>"),
                meditationTrend: Number("<%= meditationTrend || 0 %>"),
                meditationSessions: Number("<%= meditationSessions || 0 %>")
            }
        };
    </script>
    <script src="/frontendJS/profileFE.js"></script>
</body>
</html>